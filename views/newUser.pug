extends layout

block content 
  h1 New User Page
    p.lead.mt-3 新規会員登録ページ
    br
    form(role='form', action="/newUser",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", placeholder='ユーザーID')
      .form-group
        input.form-control.mt-3(type='password', name="password", placeholder='パスワード')
        input.form-control.mt-3(type='password', name="rePassword", placeholder='パスワードを再入力')
      div.d-flex.flex-row.justify-content-between.mt-5
        button.btn.btn-primary(type='submit') 登録
        div
          a(href='/', role="button").btn.btn-secondary キャンセル
      p.text-denger.mt-5 #{message}
      